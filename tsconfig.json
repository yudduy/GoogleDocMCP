// tsconfig.json
{
    "compilerOptions": {
      "target": "ES2021",
      "module": "ES2022",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "lib": ["ES2021"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }